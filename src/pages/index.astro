---
// Archivo: src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { getCollection } from 'astro:content';

// 1. SIN IMPORTS DE IMÁGENES (Para evitar errores)
// Usaremos rutas directas a la carpeta public

// 2. OBTENEMOS LAS HISTORIAS
const allHistorias = await getCollection('historias');
const historiasPortada = allHistorias.slice(0, 6);
---

<Layout title="Inicio">

    <Navbar />

    <!-- 1. HERO SECTION -->
    <main class="relative min-h-screen flex flex-col justify-center items-center text-center px-6 overflow-hidden bg-black">

        <!-- FONDO -->
        <div class="absolute inset-0 w-full h-full">

            <!-- IMAGEN DE FONDO (Ruta directa a public) -->
            <img
                src="/img/fondo.jpg"
                alt="Atmósfera oscura"
                class="w-full h-full object-cover opacity-30"
            />

            <!-- NIEBLA EN MOVIMIENTO (Ruta directa a public) -->
            <div
                class="absolute inset-0 z-0 opacity-20 animate-fog"
                style="background-image: url('/img/niebla.png'); background-size: cover; background-repeat: repeat-x;"
            ></div>

            <!-- DEGRADADO -->
            <div class="absolute inset-0 bg-gradient-to-b from-black via-black/70 to-black"></div>
        </div>

        <!-- CONTENIDO -->
        <div class="relative z-10 animate-fade-in-up max-w-5xl mx-auto pt-20">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-red-900/30 bg-red-950/10 mb-8 backdrop-blur-md">
                <span class="w-2 h-2 rounded-full bg-red-600 animate-pulse"></span>
                <span class="text-red-400 tracking-widest text-[10px] md:text-xs uppercase font-bold">Archivo Paranormal Mundial</span>
            </div>

            <h1 class="text-6xl md:text-9xl mb-6 text-white drop-shadow-2xl font-serif tracking-tight">
                El Miedo no tiene <br/>
                <span class="italic text-red-700 drop-shadow-[0_0_25px_rgba(185,28,28,0.6)]">
                    Fronteras
                </span>
            </h1>

            <p class="text-lg md:text-2xl text-gray-400 leading-relaxed max-w-3xl mx-auto mb-10 font-light drop-shadow-md">
                Desde las catacumbas de París hasta los bosques suicidas de Japón.
                <br class="hidden md:block" />
                <span class="text-white font-semibold">Bienvenido al archivo.</span>
            </p>

            <div class="flex flex-col md:flex-row gap-4 justify-center">
                <a href="#archivo" class="bg-white text-black px-8 py-4 rounded-sm font-bold tracking-widest hover:bg-gray-300 transition uppercase text-xs shadow-[0_0_20px_rgba(255,255,255,0.1)]">
                    Leer Archivos
                </a>
                <a href="#buzon" class="border border-white/20 text-gray-300 px-8 py-4 rounded-sm font-bold tracking-widest hover:text-white hover:border-white/50 transition uppercase text-xs backdrop-blur-sm">
                    Enviar Historia
                </a>
            </div>
        </div>
    </main>

    <!-- 2. SECCIÓN DESTACADA -->
    <section class="py-24 px-6 bg-neutral-950 relative z-10">
        <div class="max-w-6xl mx-auto">
            <div class="flex items-center justify-center gap-4 mb-12 opacity-60">
                <div class="h-px w-20 bg-red-900"></div>
                <span class="text-red-600 text-[10px] uppercase tracking-[0.3em] font-bold">Selección del Editor</span>
                <div class="h-px w-20 bg-red-900"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 bg-neutral-900/20 border border-neutral-800 group hover:border-red-900/30 transition duration-700">
                <div class="relative h-[500px] overflow-hidden">
                    <img
                        src="/img/munecas.jpg"
                        class="absolute inset-0 w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-105 transition duration-1000"
                        alt="Isla de las Muñecas"
                    />
                    <div class="absolute top-4 left-4 bg-red-600 text-white text-[10px] font-bold px-3 py-1 uppercase tracking-widest shadow-lg">
                        Historia del Mes
                    </div>
                </div>

                <div class="p-10 md:p-16 flex flex-col justify-center relative">
                    <span class="text-red-500 text-xs font-bold tracking-widest uppercase mb-2">Xochimilco, México</span>
                    <h2 class="text-4xl md:text-5xl text-white mb-6 font-serif">La Isla de las <span class="italic text-red-800">Muñecas</span></h2>
                    <p class="text-gray-400 mb-8 font-light leading-relaxed">
                        Julián Santana Barrera encontró el cuerpo de una niña ahogada. Atormentado por su espíritu, comenzó a colgar muñecas en los árboles para apaciguarla...
                    </p>

                    <a href="/historias/mexico" class="text-white text-sm uppercase tracking-widest border-b border-red-900/50 pb-1 w-max hover:text-red-500 transition text-left cursor-pointer">
                        Leer la crónica completa →
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- 3. GRID DE HISTORIAS -->
    <section id="archivo" class="bg-black py-24 px-6 relative z-10 border-t border-neutral-900">
        <div class="max-w-6xl mx-auto">
            <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-4">
                <h2 class="text-3xl text-white font-serif border-l-4 border-red-900 pl-6">
                    Expedientes Recientes
                </h2>
                <p class="text-gray-500 text-xs uppercase tracking-widest">
                    Mostrando {historiasPortada.length} de {allHistorias.length}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {historiasPortada.map((historia) => (
                    <a href={`/historias/${historia.id.split('.')[0]}`} class="group block">
                        <article class="cursor-pointer h-full flex flex-col bg-neutral-900/10 border border-neutral-800 hover:border-neutral-700 transition duration-500">

                            <div class="overflow-hidden h-64 mb-5 relative">
                                <img
                                    src={historia.data.image}
                                    alt={historia.data.title}
                                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100"
                                />
                                {historia.data.isNew && (
                                    <div class="absolute top-2 left-2 bg-red-900 text-white text-[10px] px-2 py-1 uppercase font-bold shadow-md">Nuevo</div>
                                )}
                                {historia.data.isPopular && (
                                    <div class="absolute top-2 right-2 bg-black/70 backdrop-blur text-white text-[10px] px-2 py-1 uppercase font-bold border border-white/10">Popular</div>
                                )}
                            </div>

                            <div class="flex-1 flex flex-col p-5 pt-0">
                                <div class="flex flex-wrap gap-2 mb-3">
                                    {historia.data.tags && historia.data.tags.map((tag) => (
                                        <span class="text-[9px] border border-neutral-800 text-neutral-500 px-2 py-0.5 rounded-sm uppercase tracking-wider bg-black/50">{tag}</span>
                                    ))}
                                </div>
                                <span class="text-red-600 text-[10px] font-bold tracking-widest uppercase mb-2">
                                    {historia.data.location}
                                </span>
                                <h3 class="text-2xl mb-3 text-white font-serif group-hover:text-red-500 transition leading-tight">
                                    {historia.data.title}
                                </h3>
                                <p class="text-neutral-500 text-sm leading-relaxed line-clamp-3 mb-6">
                                    {historia.data.extract}
                                </p>
                                <span class="mt-auto text-xs text-gray-600 uppercase tracking-widest group-hover:text-white transition flex items-center gap-2">
                                    Leer Expediente <span class="text-red-900 group-hover:translate-x-1 transition-transform">→</span>
                                </span>
                            </div>
                        </article>
                    </a>
                ))}
            </div>

            <div class="mt-16 text-center">
                <a href="/relatos" class="inline-block px-10 py-4 border border-neutral-800 text-gray-400 hover:text-white hover:border-red-900 hover:bg-red-900/10 transition duration-300 uppercase tracking-[0.2em] text-xs font-bold">
                    Ver el Archivo Completo
                </a>
            </div>
        </div>
    </section>

    <!-- 4. BUZÓN (FORMULARIO JS) -->
    <section id="buzon" class="py-24 px-6 bg-neutral-950 relative z-10 border-t border-neutral-900">
        <div class="max-w-3xl mx-auto bg-neutral-900/30 p-8 md:p-12 border border-white/5 rounded-lg text-center shadow-2xl relative overflow-hidden">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-1 bg-gradient-to-r from-transparent via-red-900 to-transparent opacity-50"></div>
            <h2 class="text-3xl text-white font-serif mb-4">Confiesa tu Historia</h2>
            <p class="text-gray-400 text-sm mb-8 font-light">El mundo necesita saber lo que viste. Tu identidad será protegida.</p>

            <form
                id="contact-form"
                action="https://formspree.io/f/mldzrejg"
                method="POST"
                class="space-y-4 text-left"
            >
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-1">
                        <label class="text-[10px] uppercase text-gray-500 tracking-widest pl-1">Nombre / Alias</label>
                        <input type="text" name="nombre" required class="bg-black border border-neutral-800 p-3 text-white text-sm w-full focus:border-red-800 outline-none transition focus:ring-1 focus:ring-red-900" />
                    </div>
                    <div class="space-y-1">
                        <label class="text-[10px] uppercase text-gray-500 tracking-widest pl-1">Ubicación</label>
                        <input type="text" name="ubicacion" class="bg-black border border-neutral-800 p-3 text-white text-sm w-full focus:border-red-800 outline-none transition focus:ring-1 focus:ring-red-900" />
                    </div>
                </div>
                <div class="space-y-1">
                    <label class="text-[10px] uppercase text-gray-500 tracking-widest pl-1">Tu Relato</label>
                    <textarea name="mensaje" rows="5" required class="bg-black border border-neutral-800 p-3 text-white text-sm w-full focus:border-red-800 outline-none transition focus:ring-1 focus:ring-red-900 resize-none"></textarea>
                </div>

                <button id="submit-btn" type="submit" class="w-full bg-gradient-to-r from-red-950 to-red-900 hover:from-red-900 hover:to-red-800 text-white py-4 text-xs font-bold tracking-widest uppercase transition shadow-[0_5px_15px_rgba(153,27,27,0.1)] mt-4 cursor-pointer">
                    Enviar al Archivo
                </button>
                <p id="form-status" class="text-center text-xs text-red-500 mt-2"></p>
            </form>

<script>
                // 1. Le decimos a TS que esto es un FORMULARIO
                const form = document.getElementById("contact-form") as HTMLFormElement;
                // 2. Le decimos a TS que esto es un BOTÓN
                const button = document.getElementById("submit-btn") as HTMLButtonElement;
                const status = document.getElementById("form-status");

                // 3. Especificamos que el evento es de tipo SubmitEvent
                async function handleSubmit(event: SubmitEvent) {
                    event.preventDefault();

                    // Verificamos que existan antes de usarlos (seguridad extra)
                    if (button) {
                        button.disabled = true;
                        button.innerText = "Enviando...";
                    }

                    if (!form) return; // Si no hay form, paramos

                    const data = new FormData(form);

                    try {
                        const response = await fetch(form.action, {
                            method: form.method,
                            body: data,
                            headers: {
                                'Accept': 'application/json'
                            }
                        });

                        if (response.ok) {
                            window.location.href = "/exito";
                        } else {
                            if(status) status.innerHTML = "Hubo un problema. Intenta de nuevo.";
                            if(button) {
                                button.disabled = false;
                                button.innerText = "Enviar al Archivo";
                            }
                        }
                    } catch (error) {
                        if(status) status.innerHTML = "Error de conexión.";
                        if(button) {
                            button.disabled = false;
                            button.innerText = "Enviar al Archivo";
                        }
                    }
                }

                if (form) {
                    form.addEventListener("submit", handleSubmit);
                }
            </script>
        </div>
    </section>

    <footer class="py-12 text-center bg-black border-t border-neutral-900">
        <p class="text-neutral-600 text-[10px] uppercase tracking-widest mb-4">© 2025 Mal Espíritu</p>
    </footer>

</Layout>

<style>
    @keyframes fog {
        0% { background-position: 0 0; }
        100% { background-position: 200% 0; }
    }
    .animate-fog {
        animation: fog 120s linear infinite;
    }
</style>
